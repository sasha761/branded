{% if menu %}
	{% for item in menu %}
		{% set image = item.meta('image') %}
		{% if item.children %}
			<div class="c-mobile-menu__item">
				<div class="c-mobile-menu__item-parent">
					<span>{{ item.title }}</span>
					{% if image %}
						<picture>
							<source data-srcset="{{image.url|resize(180, 180, 'center')|towebp}}" type="image/webp">
						  <source data-srcset="{{image.url|resize(180, 180, 'center')|tojpg}}" type="image/jpeg"> 
						  <img 
		            src="data:image/png;base64,TEVITGhbV0IyeWs4cHlvSmFkUiouN2tDTWRuag==" 
		            alt="{{image.alt}}" 
		            title="{{image.title}} - tooltip"
		            width="95" 
		            height="95"
                class="lazy"
		          >
						</picture>
					{% endif %}
				</div>
				<div class="c-mobile-menu__item-sub">
					{% for item2 in item.children %}
						{% set image2 = item2.meta('image') %}
						<a href="{{ item2.link }}" class="c-mobile-menu__item-sub__item">
							<span>{{ item2.title }}</span>
							{% if image2 %}
								<picture>
									<source data-srcset="{{image2.url|resize(180, 180, 'center')|towebp}}" type="image/webp">
								  <source data-srcset="{{image2.url|resize(180, 180, 'center')|tojpg}}" type="image/jpeg"> 
								  <img 
				            src="data:image/png;base64,TEVITGhbV0IyeWs4cHlvSmFkUiouN2tDTWRuag==" 
				            alt="{{image2.alt}}" 
				            title="{{image2.title}} - tooltip"
				            width="95" 
				            height="95"
                    class="lazy"
				          >
								</picture>
							{% endif %}
						</a>
					{% endfor %}
				</div>
			</div>
		{% else %}
			<a href="{{ item.link }}" class="c-mobile-menu__item">
				<span>{{ item.title }}</span>
				{% if image %}
					<picture>
						<source data-srcset="{{image.url|resize(180, 180, 'center')|towebp}}" type="image/webp">
					  <source data-srcset="{{image.url|resize(180, 180, 'center')|tojpg}}" type="image/jpeg"> 
					  <img 
	            src="data:image/png;base64,TEVITGhbV0IyeWs4cHlvSmFkUiouN2tDTWRuag==" 
	            alt="{{image.alt}}" 
	            title="{{image.title}} - tooltip"
	            width="95" 
	            height="95"
              class="lazy"
	          >
					</picture>
				{% endif %}
			</a>
		{% endif %}
	{% endfor %}
{% endif %}