<section class="l-outlet">
	<div class="u-container">
		<h3 class="u-h2">
			<span class="is-sale">-20%</span>
			<span>{{ 'for the entire summer collection 2023' | translateString('Outlet section - summer collection 2023') }}</span>
		</h3>
		<div class="l-outlet__content">
			<div class="l-outlet__content-left">
				<div class="row">
					<div class="col-lg-6">
						<a href="{{site.link}}/product-category/accessories/" class="c-outlet">
							<img 
								class="lazy"
								src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAEALAAAAAABAAEAAAICTAEAOw=="
								data-src="{{theme.link}}/src/img/bags1.jpg" 
								alt="bags branded" 
								width="400" 
								height="400"
							>
						</a>
					</div>
					<div class="col-lg-6">
						<a href="{{site.link}}/product-category/accessories/" class="c-outlet">
							<img 
								class="lazy"
								src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAEALAAAAAABAAEAAAICTAEAOw=="
								data-src="{{theme.link}}/src/img/bags2.jpg" 
								alt="bags branded" 
								width="400" 
								height="400"
							>
						</a>
					</div>
				</div>
				<div class="d-flex align-items-center justify-content-between is-title">
					<p class="u-text">VeroS bags and accessories</p>
					<a href="{{site.link}}/product-category/accessories/" class="u-btn is-black">{{ 'The entire collection' | translateString('buttons - The entire collection') }}</a>
				</div>
			</div>
			<div class="l-outlet__content-right js-slider-container">
				<div class="align-items-center justify-content-between d-none d-lg-flex is-title">
					<p class="u-text">VeroS brand sales</p>
					<div class="l-outlet__arrow">
						{% include 'templates/partial/arrow.twig' with {'small': true, 'length': 4} %}
					</div>
				</div>
				<div class="js-product-row swiper">
					<div class="swiper-wrapper">
					{% for data in sale_products %}
					 	{% set thumb     = function('get_the_post_thumbnail_url', data.ID, 'full') %}
						{% set permalink = function('get_the_permalink', data.ID) %}
						<div class="col-6 u-col swiper-slide">
							<a href="{{permalink}}" class="c-outlet">
								<picture>
									<source data-srcset="{{thumb|resize(400, 440, 'center')|towebp}}" type="image/webp">
								  <source data-srcset="{{thumb|resize(400, 440, 'center')|tojpg}}" type="image/jpeg"> 
								  <img 
								  	src="data:image/gif;base64,R0lGODlhCgALAIAAAP///wAAACH5BAEAAAEALAAAAAAKAAsAAAIJjI+py+0Po0wFADs=" 
								  	alt="{{data.post_title|replace({'"':'\''})|raw}}" 
								  	width="400" 
								  	height="440"
                    class="lazy"
							  	>
								</picture>
							</a>
						</div>
					{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</div>
</section>