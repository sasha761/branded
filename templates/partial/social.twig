{% if options.social %}
  <div class="c-social">
    {% if options.social.facebook %}
      <a class="c-social__item" href="{{ options.social.facebook }}" rel="nofollow">
        <svg width="28px" height="28px" class="is-facebook">
          <use xlink:href="#facebook"></use>
        </svg>
      </a>
    {% endif %}
    {% if options.social.instagram %}
      <a class="c-social__item" href="{{ options.social.instagram }}" rel="nofollow">
        <svg width="28px" height="28px" class="is-insta">
          <use xlink:href="#instagram"></use>
        </svg>
      </a>
    {% endif %}
    {% if options.social.youtube %}
      <a class="c-social__item" href="{{ options.social.youtube }}" rel="nofollow">
        <svg width="28px" height="28px" class="is-youtube">
          <use xlink:href="#youtube"></use>
        </svg>
      </a>
    {% endif %}
    {% if options.social.telegram %}
      <a class="c-social__item" href="{{ options.social.telegram }}" rel="nofollow"> 
        <svg width="28px" height="28px" class="is-telegram">
          <use xlink:href="#telegram"></use>
        </svg>
      </a>
    {% endif %}
  </div>
{% endif %}