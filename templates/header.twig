<header class="l-header">

	<div class="l-header__bottom u-relative">
		<div class="u-container">
			<div class="l-header__bottom-left">
				<div  class="c-logo">
					<a href="{{site.url}}">
						{# <img src="{{theme.link}}/dist/img/logo.svg" alt="branded logo" width="200" height="46"> #}
						<svg width="100%" height="35px">
			        <use xlink:href="#logo"></use>
			      </svg>
					</a>
				</div>
				{% if is_mobile == false %}
					{% include 'templates/menu.twig' with {'menu': menu.get_items, 'sale': true} %}
				{% endif %}
			</div>
			
			
			<div class="l-header__bottom-right">
				{% include 'templates/search-form.twig' %}

				<div class="c-service cart d-none d-sm-block">
					<div>
						<span class="c-service__count">{{ minicart.count }}</span>
						<svg width="20px" height="20px">
			        <use xlink:href="#cart"></use>
			      </svg>
					</div>

		      <div class="c-service__dropdown">
		      	{{ function('woocommerce_mini_cart') }}
		      </div>
				</div>

				<div class="c-dropdown js-dropdown">
					<span class="c-dropdown__current">{{ 'Help' | translateString('Header - help') }}</span>
					<svg width="11px" height="7px" class="u-arrow">
						<use xlink:href="#arrow"></use>
					</svg>
					<ul class="c-dropdown__list">
						{% if current_lang == 'ru' %}
							<li>
								<a href="{{ site.url }}/dostavka-i-oplata">{{ 'Shipping and Payment' | translateString('Header - shipping') }}</a>
							</li>
							<li>
								<a href="{{ site.url }}/vozvrat-i-obmen">{{ 'Returns and exchanges' | translateString('Header - returns') }}</a>
							</li>
							<li>
								<a href="{{ site.url }}/garantiya">{{ 'Guarantee' | translateString('Header - guarantee') }}</a>
							</li>
							<li>
								<a href="{{ site.url }}/reviews">{{ 'Reviews' | translateString('Header - reviews') }}</a>
							</li>
							<li>
								<a href="tel:{{ options.social.phone|replace({' ': ''}) }}">{{ options.social.phone }}</a>
							</li>
						{% elseif current_lang == 'uk' %}
							<li>
								<a href="{{ site.url }}dostavka-ta-oplata">{{ 'Shipping and Payment' | translateString('Header - shipping') }}</a>
							</li>
							<li>
								<a href="{{ site.url }}povernennya-ta-obmin">{{ 'Returns and exchanges' | translateString('Header - returns') }}</a>
							</li>
							<li>
								<a href="{{ site.url }}garantiya">{{ 'Guarantee' | translateString('Header - guarantee') }}</a>
							</li>
							<li>
								<a href="{{ site.url }}vidguky">{{ 'Reviews' | translateString('Header - reviews') }}</a>
							</li>
							<li>
								<a href="tel:{{ options.social.phone|replace({' ': ''}) }}">{{ options.social.phone }}</a>
							</li>
						{% endif %}
					</ul>					
				</div>

				<div class="c-lang js-lang">
          <div class="c-lang__current">
            {{current_lang}}
            <svg width="11px" height="7px" class="c-lang__arrow">
              <use xlink:href="#arrow">
            </svg>
            
          </div>
          <div class="c-lang__sub">

            {% for lang in language_code %}
              <a 
              	href="{{ lang.url }}" 
              	class="c-lang__item {% if current_lang == lang.code %}is-active {% endif %}"
              	data-lang="{{lang.code}}"
            	>
                {{ lang.code }}
              </a>
            {% endfor %}
          </div>
        </div>

        <div class="c-burger d-block d-sm-none" data-modal="#mobile-menu">
					<span></span>
		      <span></span>
		      <span></span>
				</div>

			</div>
		</div>
	</div>

	{% if is_mobile == true %}
		<section class="c-sticky-menu">
			<ul class="c-sticky-menu__row">
				<li>
					<a href="{{site.url}}" class="c-sticky-menu__item">
						<svg width="20px" height="20px">
			        <use xlink:href="#icon-home"></use>
			      </svg>
			      <span>{{ 'Main' | translateString('Sticky menu - main') }}</span>
					</a>
				</li>
				<li class="c-sticky-menu__item" data-modal="#mobile-menu">
					<svg width="24px" height="20px">
		        <use xlink:href="#catalog"></use>
		      </svg>
		      <span>{{ 'Catalog' | translateString('Sticky menu - catalog') }}</span>
				</li>
				<li>
					<a href="{{site.url}}/cart" class="c-sticky-menu__item">
						{% if minicart.count >= 1 %}
							<span class="c-service__count">{{ minicart.count }}</span>
						{% endif %}
						<svg width="20px" height="20px">
			        <use xlink:href="#bag"></use>
			      </svg>
			      <span>{{ 'Cart' | translateString('Sticky menu - cart') }}</span>
					</a>
				</li>
				<li class="c-sticky-menu__item" data-modal="#mobile-search">
					<svg width="17px" height="20px" stroke="#333">
						<use xlink:href="#search"></use>
					</svg>
					<span>{{ 'Search' | translateString('Sticky menu - search') }}</span>
				</li>
				<li class="c-sticky-menu__item" data-modal="#mobile-menu-more">
					<svg width="30px" height="20px">
		        <use xlink:href="#dots"></use>
		      </svg>
		      <span>{{ 'More' | translateString('Sticky menu - more') }}</span>
				</li>
			</ul>
		</section>
	{% endif %}
</header>
